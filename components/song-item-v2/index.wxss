/* components/song-item-v2/song-item-v2.wxss */
.item{
  display: flex;
  align-items: center;
  margin: 36px 0 10rpx;
  padding: 0 24rpx;
}
.index{
  font-size: 30rpx;
  padding: 12rpx;

}
.info{
  flex: 1;
  margin-left: 16rpx;
}
.info .song-name{
  font-size: 30rpx;
}
.info .source{
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 10rpx;
}
.source .icon{
  width: 38rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.ellipsis{
  font-size: 30rpx;
}